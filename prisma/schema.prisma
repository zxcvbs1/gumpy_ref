generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"] // For Netlify (AWS Lambda)
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        BigInt   @id @db.BigInt // Telegram User ID
  username  String?
  firstName String?  @map("first_name") @db.VarChar(255)
  role      String   @default("USER") // e.g., "USER", "ADMIN"
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Self-relation for referrals
  // User who referred this current user
  referredById BigInt? @map("referred_by_id") @db.BigInt
  referredBy   User?   @relation("UserReferrals", fields: [referredById], references: [id], onDelete: NoAction, onUpdate: NoAction)

  // List of users that this current user has referred
  referralsGiven User[] @relation("UserReferrals")

  @@map("users")
}
